<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0,maximum-scale=1">

    <title>JF-Hairstyle</title>
    <link href="~/fonts/font-awesome.min.css" rel="stylesheet" />
    <link href="~/fonts/novecento-font/novecento-font.css" rel="stylesheet" />
    <link href="~/Content/businessSite.css" rel="stylesheet" />

    <!--[if lt IE 9]>
    <script src="js/ie-support/html5.js"></script>
    <script src="js/ie-support/respond.js"></script>
    <![endif]-->
</head>

<body class="homepage header-collapse">
    <div id="site-content">

        <header class="site-header">
            <div class="container">
                <a id="branding" href="index.html">
                    <img src="~/Content/images/logo.png" alt="Company name" class="logo">
                    <div class="logo-copy">
                        <h1 class="site-title">JF-Hairstyle</h1>
                        <small class="site-description">PROFESSIONAL</small>
                    </div>
                </a>

                <div class="main-navigation">
                    <button type="button" class="menu-toggle"><i class="fa fa-bars"></i></button>
                    <ul class="menu">
                        <li class="menu-item">@Html.ActionLink("Login", "Login", "Account")</li>
                        @*<li class="menu-item current-menu-item"><a href="index.html">Home</a></li>
                        <li class="menu-item"><a href="about.html">About</a></li>
                        <li class="menu-item"><a href="service.html">Services</a></li>
                        <li class="menu-item"><a href="gallery.html">Gallery</a></li>
                        <li class="menu-item"><a href="contact.html">Contact</a></li>*@
                    </ul> 
                </div> 
                <div class="mobile-navigation"></div>
            </div>
        </header>

        @RenderBody()

        <footer class="site-footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-3">
                        <div class="widget contact-widget">
                            <h3 class="widget-title">Contact</h3>
                            <div class="contact-info">
                                <address>
                                    <img src="~/Content/images/icon-map-small.png" class="icon">
                                    <p><strong>Joanna Frydrych</strong> 21 St. Lukes Walk, Hawkinge CT187EF</p>
                                </address>
                                <a href="mailto:joannafrydrych27@gmail.com" class="mail"><img src="~/Content/images/icon-envelope-small.png" class="icon">joannafrydrych27@gmail.com</a>
                                <a href="tel:07938907874" class="phone"><img src="~/Content/images/icon-phone-small.png" class="icon">07938907874</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="widget">
                            <h3 class="widget-title">Social Media</h3>
                            <p>You can find me here</p>
                            <div class="social-links">
                                <a href="https://www.facebook.com/jfhairstyle/"><i class="fa fa-facebook"></i></a>
                                @*<a href="#"><i class="fa fa-twitter"></i></a>
                                <a href="#"><i class="fa fa-google-plus"></i></a>
                                <a href="#"><i class="fa fa-pinterest"></i></a>*@
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="widget">
                            <h3 class="widget-title">Newsletter</h3>
                            <p>Sign up for the latest news </p>
                            <form action="#" class="subscribe-form">
                                <input type="email" placeholder="Enter your email...">
                                <input type="submit" value="Sign up">
                            </form>
                        </div>
                    </div>
                </div>
                <div class="colophon">
                    <p>&copy; @DateTime.Now.Year - JF Hairstyle. Designed by Themezy. Created by Crash Creative Studio. All rights reserved.</p>
                </div>
            </div>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/BusinessSite/app.js"></script>
    <script src="~/Scripts/BusinessSite/plugins.js"></script>

</body>
</html>